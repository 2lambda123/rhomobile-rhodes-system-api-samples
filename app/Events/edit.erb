<div class="toolbar">
	<h1 id="pageTitle">
		Edit Event
	</h1>
</div>
<form title="Edit Event"
   class="panel"
   id="event_edit_form"
   method="POST"
   action="<%=url_for(:action => :update)%>">
  <fieldset>
    <input type="hidden" name="event[id]" value="<%=@event['id']%>"/>
    <div class="row">
      <label>Title: </label>
      <input type="text" name="event[title]" value="<%=@event['title']%>"/>
    </div>
    <div class="row">
        <label>Location: </label>
        <input type="text" name="event[location]" value="<%= @event['location']%>" />
    </div>
    <div class="row">
        <label>Start Date: </label>
        <input id="start_date" type="text" name="event[start_date]" value="<%= $choosed_start_date.strftime( '%F %T' ) %>"  readonly="" 
<% if System::get_property('platform') == 'Blackberry' %>
               ></input>    
      <%= link_to "Edit", { :action => "edit_date", :query => { :type => 'start_date', :title => 'Choose Start Date', :id=>@event['id'] } } %><br/>

          <% else %>
          onClick="popupDateTimeAJPicker('Choose Start Date', 'start_date');">
  </input>
  <%end%></div>
  <div class="row">
      <label>End Date: </label>
      <input id="end_date" type="text" name="event[end_date]" value="<%= $choosed_end_date.strftime( '%F %T' ) %>" readonly=""

          <% if System::get_property('platform') == 'Blackberry' %>
          >
      </input>
      <%= link_to "Edit", { :action => "edit_date", :query => { :type => 'end_date', :title => 'Choose End Date', :id=>@event['id'] } } %><br/>
        
<% else %>                           
               onClick="popupDateTimeAJPicker('Choose End Date', 'end_date');"></input>
<% end %>                                      
    </div>
    <div class="row">
        <label>Notes: </label>
        <input type="text" name="event[notes]" value="<%= @event['notes']%>" />
    </div>
    <div class="row">
        <label>Privacy: </label>
        <input type="text" name="event[privacy]" value="<%= @event['privacy']%>" />
    </div>
    <div class="row">
        <label>Reminder: </label>
        <input type="text" name="event[reminder]" value="<%= @event['reminder']%>" />
    </div>

    </fieldset>
  <input type="submit" value="Update"/>
  <div align="center">
    <a href="<%=url_for(:action => :delete, :id => @event['id'])%>">
      <font color="#990000">Delete</font>
    </a>
  </div>
</form>

<script type="text/javascript">

    function setFieldValue(field, value) {
    document.getElementById(field).value=value;
    }

    function popupDateTimeAJPicker(title, field_key) {
    $.get('/app/Calendar/date_popup', { title: title, field_key: field_key });
    return false;
    }

</script>
