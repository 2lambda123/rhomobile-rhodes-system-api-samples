<div>
<div>Available scanners:</div>
<ol>
  <% @scanners.each_index do |i| %>
    <li><%= @scanners[i]['name'] %>:</li>
    <ul>
      <li><%= link_to 'Take Barcode', { :action => :take, :query => {:scanner => @scanners[i]['name']} }%></li>
      <li><%= link_to 'Multi Scan', { :action => :multiscan, :query => {:scanner => @scanners[i]['name']} }%></li>
    </ul>
  <% end %>
</ol>
</div>