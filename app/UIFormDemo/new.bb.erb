<div id="pageTitle">
    <h1>New UIFormDemo</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @uiformdemo.object %>"/>
        <table>
    		
    		  <tr>
    			  <td width="125">Textbox: </td>
    			  <td><input type="text" name="uiformdemo[textbox]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td width="125">Checkbox: </td>
    			  <td><input type="text" name="uiformdemo[checkbox]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td width="125">Radiobutton: </td>
    			  <td><input type="text" name="uiformdemo[radiobutton]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td width="125">Textarea: </td>
    			  <td><input type="text" name="uiformdemo[textarea]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>